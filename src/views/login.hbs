{{!-- src/views/login.hbs --}}
<div class="mx-auto max-w-sm bg-white rounded-xl shadow p-6 mt-10">
  <h1 class="text-2xl font-semibold mb-4 text-center">Iniciar sesión</h1>

  {{#if error}}
    {{!-- Estilo para que el mensaje de error se vea bien y no rompa el layout --}}
    <div style="
        background-color: #fef2f2; 
        color: #991b1b; 
        border: 1px solid #dc2626; 
        padding: 8px 12px; 
        border-radius: 4px; 
        margin-bottom: 1.5rem;
        font-weight: 600;
        text-align: center;
    ">
      {{error}}
    </div>
  {{/if}}

  <form method="POST" action="/login" class="flex flex-col gap-3">
    
    <label class="text-sm">Usuario o correo</label>
    {{!-- ✅ CAMBIO APLICADO: autocomplete="off" --}}
    <input class="border rounded p-2" type="text" name="usuario" required autocomplete="off"> 

    <label class="text-sm">Contraseña</label>
    {{!-- ✅ CAMBIO APLICADO: autocomplete="off" --}}
    <input class="border rounded p-2" type="password" name="contraseña" required autocomplete="off"> 

    <button type="submit" class="mt-2 rounded bg-black text-white py-2">
      Entrar
    </button>
  </form>
</div>