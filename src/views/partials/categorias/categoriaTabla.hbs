<style>
    :root {
        --color-primary: #dc2626;
        --color-primary-dark: #991b1b;
        --color-primary-light: #fef2f2;
        --color-secondary: #f59e0b;
        --color-success: #10b981;
        --color-text: #1f2937;
        --color-text-light: #6b7280;
        --color-bg: #f9fafb;
        --color-card-bg: #ffffff;
        --color-white: #ffffff;
        --color-border: #e5e7eb;
        --color-shadow: rgba(220, 38, 38, 0.08);
        --color-shadow-lg: rgba(0, 0, 0, 0.1);
        --color-danger: #ef4444;
        --font-family-primary: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Helvetica Neue', Arial, sans-serif;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* ============================================= */
    /* üëá AQU√ç AGREGAMOS LA IMAGEN DE FONDO üëá */
    body {
        font-family: var(--font-family-primary);
        
        /* Imagen de fondo */
        background-image: url('https://png.pngtree.com/thumb_back/fw800/background/20230720/pngtree-3d-rendered-red-sofa-and-chair-set-image_3725833.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;

        min-height: 100vh;
        color: var(--color-text);
        line-height: 1.6;
        padding: 1rem; /* Un poco de espacio para que la tabla no pegue a los bordes */
    }
    /* ============================================= */

    .table-container {
        background: var(--color-card-bg);
        border-radius: 20px;
        box-shadow: 0 8px 30px var(--color-shadow-lg);
        overflow: hidden;
        margin: 2rem auto;
        max-width: 1200px;
        animation: fadeIn 0.5s ease-out;
        /* Esto asegura que la tabla sea blanca y legible sobre el fondo */
        position: relative; 
        z-index: 1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
        color: var(--color-white);
    }

    thead th {
        padding: 1.25rem 1.5rem;
        text-align: left;
        font-weight: 600;
        font-size: 0.925rem;
        letter-spacing: 0.02em;
        text-transform: uppercase;
    }

    tbody tr {
        border-bottom: 1px solid var(--color-border);
        transition: var(--transition);
    }

    tbody tr:hover {
        background-color: var(--color-primary-light);
    }

    tbody td {
        padding: 1.125rem 1.5rem;
        color: var(--color-text);
        font-size: 0.95rem;
    }

    .dot {
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.375rem 0.875rem;
        border-radius: 20px;
        font-size: 0.875rem;
    }

    .dot.yes {
        color: var(--color-success);
        background-color: #d1fae5;
    }

    .dot.no {
        color: #6b7280;
        background-color: #f3f4f6;
    }

    .status-btn {
        background: linear-gradient(135deg, var(--color-primary) 0%, #ef4444 100%);
        color: var(--color-white);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        margin-right: 0.5rem;
    }

    .status-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
    }

    tbody td a {
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 500;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        transition: var(--transition);
        margin-right: 0.5rem;
        display: inline-block;
    }

    tbody td a:hover {
        background-color: var(--color-primary-light);
        color: var(--color-primary-dark);
    }

    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        z-index: 998;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: var(--transition);
    }

    .modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .modal-ficha {
        width: min(560px, 92vw);
        background: var(--color-card-bg);
        color: var(--color-text);
        border-radius: 24px;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
        padding: 0;
        z-index: 999;
        position: relative;
        overflow: hidden;
        transform: scale(0.9);
        transition: var(--transition);
    }

    .modal-overlay.active .modal-ficha {
        transform: scale(1);
    }

    .modal-ficha::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    }

    .modal-ficha[hidden],
    .modal-overlay[hidden] {
        display: none;
    }

    .modal-close {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        background: rgba(220, 38, 38, 0.1);
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 8px;
        font-size: 1.5rem;
        line-height: 1;
        cursor: pointer;
        color: var(--color-primary);
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    .modal-close:hover {
        background: var(--color-primary);
        color: var(--color-white);
        transform: rotate(90deg);
    }

    .ficha-header {
        background: linear-gradient(135deg, var(--color-primary-light) 0%, transparent 100%);
        padding: 2rem 2rem 1.5rem;
        border-bottom: 1px solid var(--color-border);
    }

    .ficha-header h3 {
        margin: 0;
        font-size: 1.5rem;
        letter-spacing: -0.02em;
        font-weight: 700;
        color: var(--color-text);
    }

    .ficha-body {
        padding: 2rem;
        display: grid;
        gap: 1.5rem;
    }

    .ficha-row {
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 1rem;
        align-items: start;
    }

    .ficha-label {
        font-weight: 600;
        color: var(--color-text-light);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .ficha-value {
        color: var(--color-text);
        font-weight: 500;
        word-break: break-word;
    }

    .ficha-value a {
        color: var(--color-primary);
        text-decoration: none;
        transition: var(--transition);
    }

    .ficha-value a:hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
    }

    .ficha-actions {
        display: flex;
        gap: 0.75rem;
        justify-content: flex-end;
        flex-wrap: wrap;
        padding: 1.5rem 2rem 2rem;
        border-top: 1px solid var(--color-border);
        background-color: #f9fafb;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.925rem;
        border-radius: 10px;
        border: 2px solid transparent;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--transition);
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--color-primary) 0%, #ef4444 100%);
        color: var(--color-white);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
    }

    .btn-primary:hover {
        box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
    }

    .btn-danger {
        border-color: var(--color-danger);
        background: transparent;
        color: var(--color-danger);
    }

    .btn-danger:hover {
        background: var(--color-danger);
        color: var(--color-white);
    }

    .btn-ghost {
        background: transparent;
        border-color: var(--color-border);
        color: var(--color-text);
    }

    .btn-ghost:hover {
        background: var(--color-border);
    }

    .body-no-scroll {
        overflow: hidden;
    }

    @media (max-width: 768px) {
        .table-container {
            border-radius: 12px;
            margin: 1rem;
        }

        thead th,
        tbody td {
            padding: 0.875rem 1rem;
            font-size: 0.875rem;
        }

        .ficha-row {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .ficha-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Activa</th>
                {{#if user.administrador}}
                <th>Acciones</th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{descripcion}}</td>
                <td>
                    {{#if activa}}
                        <span class="dot yes">‚óè Activa</span>
                    {{else}}
                        <span class="dot no">‚óè Inactiva</span>
                    {{/if}}
                </td>
                {{#if ../user.administrador}}
                <td>
                    <button
                        class="status-btn"
                        data-id="{{_id}}"
                        data-nombre="{{nombre}}"
                        data-descripcion="{{descripcion}}"
                        data-activa="{{#if activa}}S√≠{{else}}No{{/if}}"
                        data-edit="/editarCategoria/{{_id}}"
                        data-delete="/eliminarCategoria/{{_id}}"
                    >Ver Detalles</button>
                    <a href="/editarCategoria/{{_id}}">Editar</a>
                    <a href="/eliminarCategoria/{{_id}}">Eliminar</a>
                </td>
                {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="overlay-modal-ficha" class="modal-overlay">
    <div id="modal-ficha-categoria" class="modal-ficha" role="dialog" aria-modal="true" aria-labelledby="ficha-title-categoria">
        <button class="modal-close" type="button" aria-label="Cerrar">√ó</button>

        <header class="ficha-header">
            <h3 id="ficha-title-categoria">Detalles de la Categor√≠a</h3>
        </header>

        <section class="ficha-body">
            <div class="ficha-row">
                <span class="ficha-label">Nombre</span>
                <span id="ficha-nombre-cat" class="ficha-value"></span>
            </div>
            <div class="ficha-row">
                <span class="ficha-label">Descripci√≥n</span>
                <span id="ficha-descripcion-cat" class="ficha-value"></span>
            </div>
            <div class="ficha-row">
                <span class="ficha-label">Estado</span>
                <span id="ficha-activa-cat" class="ficha-value"></span>
            </div>
        </section>

        <footer class="ficha-actions">
            <a id="ficha-btn-editar-cat" class="btn btn-primary" href="#">‚úèÔ∏è Editar</a>
            <a id="ficha-btn-eliminar-cat" class="btn btn-danger" href="#">üóëÔ∏è Eliminar</a>
            <button id="ficha-btn-cerrar-cat" class="btn btn-ghost" type="button">Cerrar</button>
        </footer>
    </div>
</div>

<script>
(function() {
    const overlay = document.getElementById('overlay-modal-ficha');
    const modal = document.getElementById('modal-ficha-categoria');
    
    if (!modal) return;

    const closeBtn = modal.querySelector('.modal-close');
    const cerrarBtn = document.getElementById('ficha-btn-cerrar-cat');
    const elNombre = document.getElementById('ficha-nombre-cat');
    const elDescrip = document.getElementById('ficha-descripcion-cat');
    const elActiva = document.getElementById('ficha-activa-cat');
    const btnEdit = document.getElementById('ficha-btn-editar-cat');
    const btnDel = document.getElementById('ficha-btn-eliminar-cat');

    function openModal() {
        overlay.hidden = false;
        modal.hidden = false;
        setTimeout(() => overlay.classList.add('active'), 10);
        document.body.classList.add('body-no-scroll');
    }

    function closeModal() {
        overlay.classList.remove('active');
        setTimeout(() => {
            overlay.hidden = true;
            modal.hidden = true;
        }, 300);
        document.body.classList.remove('body-no-scroll');
    }

    function fillCard({ nombre, descripcion, activa, editUrl, deleteUrl }) {
        elNombre.textContent = nombre || '';
        elDescrip.textContent = descripcion || '';
        elActiva.textContent = activa || 'No';
        btnEdit.href = editUrl || '#';
        btnDel.href = deleteUrl || '#';
    }

    document.addEventListener('click', function(e) {
        const btn = e.target.closest('.status-btn');
        if (!btn) return;

        const payload = {
            nombre: btn.dataset.nombre,
            descripcion: btn.dataset.descripcion,
            activa: btn.dataset.activa,
            editUrl: btn.dataset.edit,
            deleteUrl: btn.dataset.delete
        };

        fillCard(payload);
        openModal();
    });

    if (closeBtn) closeBtn.addEventListener('click', closeModal);
    if (cerrarBtn) cerrarBtn.addEventListener('click', closeModal);
    if (overlay) {
        overlay.addEventListener('click', function(e) {
            if (e.target === overlay) closeModal();
        });
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !modal.hidden) closeModal();
    });

    if (btnDel) {
        btnDel.addEventListener('click', function(e) {
            const ok = confirm('¬øSeguro que deseas eliminar esta Categor√≠a?');
            if (!ok) e.preventDefault();
        });
    }
})();
</script>