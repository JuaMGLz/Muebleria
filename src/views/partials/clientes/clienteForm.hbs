<style>
    :root {
        --color-primary: #dc2626;
        --color-primary-dark: #991b1b;
        --color-primary-light: #fef2f2;
        --color-secondary: #f59e0b;
        --color-text: #333;
        --color-border: #ddd;
        --color-shadow: rgba(220, 38, 38, 0.1);
        --color-white: #ffffff;
        --color-bg: #f0f2f5;
        --font-family-primary: 'Helvetica Neue', Arial, sans-serif;
    }

    body {
        font-family: var(--font-family-primary);
        background-color: var(--color-bg);
        color: var(--color-text);
    }

    .form-container {
        background-color: var(--color-white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 10px var(--color-shadow);
        max-width: 800px;
        margin: 2rem auto;
        border-top: 4px solid var(--color-primary);
    }

    .form-title {
        text-align: center;
        color: var(--color-primary);
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--color-text);
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid var(--color-border);
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 3px var(--color-shadow);
    }

    fieldset.form-direccion {
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    fieldset.form-direccion legend {
        font-weight: 600;
        color: var(--color-text);
        padding: 0 0.5rem;
    }

    .direccion-group {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .direccion-group .form-group {
        flex: 1 1 250px;
    }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 1rem;
        background-color: var(--color-primary);
        color: var(--color-white);
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-submit:hover {
        background-color: var(--color-primary-dark);
        transform: translateY(-2px);
    }
</style>

<div class="form-container">
    <h2 class="form-title">Agregar Nuevo Cliente</h2>
    <form action="/cliente/agregar" method="POST">

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Ej. Juan Pérez" required />
        </div>

        <div class="form-group">
            <label for="telefono">Teléfono</label>
            <input
                type="tel"
                name="telefono"
                id="telefono"
                placeholder="Ej. 5512345678"
                pattern="[0-9]{10}"
                maxlength="10"
                title="Ingresa 10 dígitos numéricos"
                required
                oninput="validatePhoneNumber(this)"
            />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Ej. ejemplo@correo.com" required />
        </div>

        <div class="form-group">
            <label for="rfc">RFC</label>
            <input
                type="text"
                name="rfc"
                id="rfc"
                placeholder="Ej. XAXX010101000"
                pattern="[A-Z&Ñ]{3,4}[0-9]{2}(0[1-9]|1[0-2])(0[1-9]|[12][0-9]|3[01])[A-Z0-9]{3}"
                maxlength="13"
                title="Ingresa un RFC válido (ej. GOCJ620822GT4)"
                required
            />
        </div>

        <fieldset class="form-direccion">
            <legend>Dirección</legend>
            <div class="direccion-group">
                <div class="form-group">
                    <label for="calle">Calle</label>
                    <input type="text" name="direccion[calle]" id="calle" placeholder="Ej. Calle 5 de Mayo" required />
                </div>
                <div class="form-group">
                    <label for="numero">Número</label>
                    <input type="text" name="direccion[numero]" id="numero" placeholder="Ej. 123" required />
                </div>
                <div class="form-group">
                    <label for="colonia">Colonia</label>
                    <input type="text" name="direccion[colonia]" id="colonia" placeholder="Ej. Centro" required />
                </div>
                <div class="form-group">
                    <label for="municipio">Municipio</label>
                    <input type="text" name="direccion[municipio]" id="municipio" placeholder="Ej. Cuauhtémoc" required />
                </div>
                <div class="form-group">
                    <label for="estado">Estado</label>
                    <input type="text" name="direccion[estado]" id="estado" placeholder="Ej. CDMX" required />
                </div>
                <div class="form-group">
                    <label for="cp">Código Postal</label>
                    <input type="text" name="direccion[cp]" id="cp" placeholder="Ej. 01000" required />
                </div>
            </div>
        </fieldset>

        <div class="form-group">
            <label for="activo">Activo</label>
            <select name="activo" id="activo" required>
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>
        </div>

        <button type="submit" class="btn-submit">Guardar</button>
    </form>
</div>

<script>
    function validatePhoneNumber(input) {
        input.value = input.value.replace(/[^0-9]/g, '');
    }
</script>
