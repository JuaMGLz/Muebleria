<style>
    :root {
        --color-primary: #dc2626;
        --color-primary-dark: #991b1b;
        --color-primary-light: #fef2f2;
        --color-secondary: #f59e0b;
        --color-success: #10b981;
        --color-text: #1f2937;
        --color-text-light: #6b7280;
        --color-bg: #f9fafb;
        --color-card-bg: #ffffff;
        --color-white: #ffffff;
        --color-border: #e5e7eb;
        --color-shadow: rgba(220, 38, 38, 0.08);
        --color-shadow-lg: rgba(0, 0, 0, 0.1);
        --color-danger: #ef4444;
        --font-family-primary: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Helvetica Neue', Arial, sans-serif;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
        font-family: var(--font-family-primary);
        background-image: url('https://png.pngtree.com/thumb_back/fw800/background/20230720/pngtree-3d-rendered-red-sofa-and-chair-set-image_3725833.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        color: var(--color-text);
        padding: 1rem;
    }

    .table-container {
        background: var(--color-card-bg);
        border-radius: 20px;
        box-shadow: 0 8px 30px var(--color-shadow-lg);
        overflow: hidden;
        margin: 2rem auto;
        max-width: 1200px;
        animation: fadeIn 0.5s ease-out;
        position: relative; 
        z-index: 1;
    }

    table { width: 100%; border-collapse: collapse; }

    thead {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
        color: var(--color-white);
    }

    thead th {
        padding: 1.25rem 1.5rem;
        text-align: left;
        font-weight: 600;
    }

    tbody tr {
        border-bottom: 1px solid var(--color-border);
        transition: var(--transition);
    }

    tbody tr:hover { background-color: var(--color-primary-light); }

    tbody td { padding: 1.125rem 1.5rem; font-size: 0.95rem; }

    .status-btn {
        background: linear-gradient(135deg, var(--color-primary) 0%, #ef4444 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    tbody td a {
        color: var(--color-primary);
        text-decoration: none;
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        display: inline-block;
    }

    /* CENTRAR STATUS Y ACCIONES */
    thead th:nth-child(6),
    thead th:nth-child(7),
    tbody td:nth-child(6),
    tbody td:nth-child(7) {
        text-align: center;
    }

    /* ===== MODAL ===== */

    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999;
    }

    .modal-ficha {
        width: min(560px, 92vw);
        background: white;
        color: var(--color-text);
        border-radius: 24px;
        padding: 0;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        animation: fadeIn 0.3s ease-out;
    }

    .modal-ficha::before {
        content: '';
        height: 6px;
        width: 100%;
        display: block;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    }

    .modal-close {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        background: rgba(220, 38, 38, 0.1);
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 8px;
        font-size: 1.5rem;
        cursor: pointer;
    }

    .ficha-header { padding: 2rem; border-bottom: 1px solid var(--color-border); }
    .ficha-body { padding: 2rem; display: grid; gap: 1.5rem; }

    .ficha-row {
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 1rem;
    }

    .ficha-actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        padding: 1.5rem 2rem;
        border-top: 1px solid var(--color-border);
    }

    .btn { padding: 0.75rem 1.5rem; border-radius: 10px; cursor: pointer; }
    .btn-primary { background: var(--color-primary); color: white; }
    .btn-danger { border: 2px solid var(--color-danger); color: var(--color-danger); }
    .btn-ghost { border: 2px solid var(--color-border); }

    [hidden] { display: none !important; }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>


<!-- ======================= TABLA ======================= -->

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>RFC</th>
            <th>Municipio/Estado</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each clientes}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{telefono}}</td>
            <td>{{email}}</td>
            <td>{{rfc}}</td>
            <td>{{direccion.municipio}}, {{direccion.estado}}</td>
            <td>
                {{#if activo}}
                <span style="color: green;">● Activo</span>
                {{else}}
                <span style="color: red;">● Inactivo</span>
                {{/if}}
            </td>

            <td>
                <button class="status-btn"
                    data-id="{{_id}}"
                    data-nombre="{{nombre}}"
                    data-telefono="{{telefono}}"
                    data-email="{{email}}"
                    data-rfc="{{rfc}}"
                    data-municipio="{{direccion.municipio}}"
                    data-estado="{{direccion.estado}}"
                    data-activo="{{#if activo}}Activo{{else}}Inactivo{{/if}}"
                    data-edit="/editarCliente/{{_id}}"
                    data-delete="/eliminarCliente/{{_id}}">
                    Status
                </button>

                <a href="/editarCliente/{{_id}}">Editar</a>
                <a href="/eliminarCliente/{{_id}}">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- ============= OVERLAY + MODAL (centrado) ============= -->

<div id="overlay-modal-ficha" class="modal-overlay" hidden>
    <div id="modal-ficha" class="modal-ficha" role="dialog" aria-modal="true" hidden>

        <button class="modal-close" type="button">×</button>

        <header class="ficha-header">
            <h3 id="ficha-title">Ficha de Cliente</h3>
        </header>

        <section class="ficha-body">
            <div class="ficha-row"><span class="ficha-label">Nombre</span><span id="ficha-nombre"></span></div>
            <div class="ficha-row"><span class="ficha-label">Teléfono</span><a id="ficha-telefono" href="#"></a></div>
            <div class="ficha-row"><span class="ficha-label">Email</span><a id="ficha-email" href="#"></a></div>
            <div class="ficha-row"><span class="ficha-label">RFC</span><span id="ficha-rfc"></span></div>
            <div class="ficha-row"><span class="ficha-label">Ubicación</span><span id="ficha-ubicacion"></span></div>
            <div class="ficha-row"><span class="ficha-label">Estado</span><span id="ficha-activo"></span></div>
        </section>

        <footer class="ficha-actions">
            <a id="ficha-btn-editar" class="btn btn-primary">Editar</a>
            <a id="ficha-btn-eliminar" class="btn btn-danger">Eliminar</a>
            <button id="ficha-btn-cerrar" class="btn btn-ghost">Cerrar</button>
        </footer>
    </div>
</div>

<!-- ===================== JS ========================= -->

<script>
(function () {

    const overlay = document.getElementById('overlay-modal-ficha');
    const modal   = document.getElementById('modal-ficha');
    const closeX  = modal.querySelector('.modal-close');
    const closeBtn = document.getElementById('ficha-btn-cerrar');

    const elNombre = document.getElementById('ficha-nombre');
    const elTelefono = document.getElementById('ficha-telefono');
    const elEmail = document.getElementById('ficha-email');
    const elRfc = document.getElementById('ficha-rfc');
    const elUbicacion = document.getElementById('ficha-ubicacion');
    const elActivo = document.getElementById('ficha-activo');
    const btnEdit = document.getElementById('ficha-btn-editar');
    const btnDel = document.getElementById('ficha-btn-eliminar');

    function openModal() {
        overlay.hidden = false;
        modal.hidden = false;
        document.body.classList.add('body-no-scroll');
    }

    function closeModal() {
        overlay.hidden = true;
        modal.hidden = true;
        document.body.classList.remove('body-no-scroll');
    }

    function fillCard(data) {
        elNombre.textContent = data.nombre;
        elTelefono.textContent = data.telefono;
        elTelefono.href = `tel:${data.telefono}`;
        elEmail.textContent = data.email;
        elEmail.href = `mailto:${data.email}`;
        elRfc.textContent = data.rfc;
        elUbicacion.textContent = `${data.municipio}, ${data.estado}`;
        elActivo.textContent = data.activo;
        elActivo.style.color = data.activo === "Activo" ? "green" : "red";

        btnEdit.href = data.editUrl;
        btnDel.href = data.deleteUrl;
    }

    document.addEventListener('click', function (e) {
        const btn = e.target.closest('.status-btn');
        if (!btn) return;

        fillCard({
            nombre: btn.dataset.nombre,
            telefono: btn.dataset.telefono,
            email: btn.dataset.email,
            rfc: btn.dataset.rfc,
            municipio: btn.dataset.municipio,
            estado: btn.dataset.estado,
            activo: btn.dataset.activo,
            editUrl: btn.dataset.edit,
            deleteUrl: btn.dataset.delete
        });

        openModal();
    });

    closeX.addEventListener('click', closeModal);
    closeBtn.addEventListener('click', closeModal);

    overlay.addEventListener('click', e => {
        if (e.target === overlay) closeModal();
    });

    document.addEventListener('keydown', e => {
        if (e.key === "Escape") closeModal();
    });

    btnDel.addEventListener('click', e => {
        if (!confirm("¿Seguro que deseas eliminar este cliente?")) {
            e.preventDefault();
        }
    });

})();
</script>
