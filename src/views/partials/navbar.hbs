        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(3px); /* Efecto desenfoque de fondo */
        opacity: 0;
        visibility: hidden;
        transition: var(--transition);
        z-index: 999;
    }

